                    <m:annotation encoding="StarMath 5.0"> size 12{"40" \( 0 \) +"30" \( 0 \) =$0} {}</m:annotation>
                  </m:semantics>
                </m:math>
              </entry>
            </row>
            <row>
              <entry>(0.12)</entry>
              <entry>
                <m:math>
                  <m:semantics>
                    <m:mrow>
